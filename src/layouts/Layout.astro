---
import Header from '../components/Header.astro';
import '@fontsource-variable/onest';
import Hero from '../components/Hero.astro'
import Hamburguesas from '../components/Hamburguesas.astro';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<div class="absolute top-0 z-[-2] min-h-screen w-full bg-neutral-950 bg-[radial-gradient(ellipse_80%_80%_at_50%_-20%,rgba(255,128,0,0.3),rgba(255,255,255,0))]"></div>
		<Header />
		<Hero />
		<Hamburguesas />
		<slot />
	</body>
</html>
<style is:inline>
	body {
		font-family: 'Onest Variable', sans-serif;
	}
</style>
